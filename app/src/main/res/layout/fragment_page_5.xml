<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#04967D"

    tools:context="com.shalom.itai.theservantexperience.introduction.PageFragment"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginBottom="8dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/rel_tutorial"
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.333"
            app:srcCompat="@drawable/rel_stranger"
            app:layout_constraintRight_toLeftOf="@+id/mood_tutorial"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.95" />

        <ImageView
            android:id="@+id/mood_tutorial"
            android:layout_width="38dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/mood"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="125dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.9" />
    </android.support.constraint.ConstraintLayout>



    <!-- TODO: Update blank fragment layout -->
    <com.shalom.itai.theservantexperience.utils.FontTextView
        android:id="@+id/text_frag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/tutorial_mood"
        android:theme="@style/normalText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.655" />



    <ImageView
        android:id="@+id/mem_tutorial"
        android:layout_width="71dp"
        android:layout_height="68dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:srcCompat="@drawable/mem"
        app:layout_constraintRight_toLeftOf="@+id/jon_in_tutorial"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:id="@+id/chat_icon_tutorial"
        android:layout_width="71dp"
        android:layout_height="68dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28"
        app:srcCompat="@drawable/chat"
        app:layout_constraintRight_toLeftOf="@+id/jon_in_tutorial"
        app:layout_constraintHorizontal_bias="1.0" />



    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/jon_in_tutorial"
        android:layout_width="212dp"
        android:layout_height="225dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_bias="0.385" />

    <Button
        android:id="@+id/ok_got_it"
        android:layout_width="142dp"
        android:layout_height="73dp"
        android:text="@string/understood_tutorial"
        android:layout_marginRight="121dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="121dp" />

</android.support.constraint.ConstraintLayout>
