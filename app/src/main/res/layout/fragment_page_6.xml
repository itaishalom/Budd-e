<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#04967D"

    tools:context="com.shalom.itai.theservantexperience.Introduction.PageFragment"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/ok_got_it"
        android:layout_width="142dp"
        android:layout_height="73dp"
        android:text="@string/understood_tutorial"
        android:layout_marginRight="121dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:theme="@style/normalText"
        android:id="@+id/text_frag"
        android:layout_width="356dp"
        android:layout_height="87dp"
        android:gravity="center"
        android:text="@string/ask_permissions_1"
        android:layout_marginBottom="58dp"
        app:layout_constraintBottom_toTopOf="@+id/jon_in_tutorial"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/text_frag_2"
        android:theme="@style/normalText"
        android:layout_width="330dp"
        android:layout_height="87dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/ask_permissions_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jon_in_tutorial"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.545" />

    <ImageView
        android:id="@+id/jon_in_tutorial"
        android:layout_width="212dp"
        android:layout_height="225dp"
        app:srcCompat="@drawable/jon_png"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />



</android.support.constraint.ConstraintLayout>
