<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.shalom.itai.theservantexperience.activities.SelfieV2"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button
        android:id="@+id/startcamerapreview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="- Picture! -"
        />



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <com.shalom.itai.theservantexperience.Utils.CameraPreview
        android:id ="@+id/camerapreview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/jon_in_slefie"
            android:layout_width="192dp"
            android:visibility="invisible"
            android:layout_height="313dp"
            app:srcCompat="@drawable/jon_png" />

    </FrameLayout>
</LinearLayout>